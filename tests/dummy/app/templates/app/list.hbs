{{#uxs-header image="https://placeimg.com/2560/1600/any/grayscale" style="dark" as |header|}}
  {{#header.toolbar as |toolbar|}}
    {{toolbar.back "arrow_back"}}
    {{toolbar.spacer}}
    {{toolbar.action "filter_list"}}
    {{toolbar.action "file_download"}}
    {{toolbar.action "search"}}
  {{/header.toolbar}}
  {{header.title "Widgets"}}
{{/uxs-header}}

{{#uxs-window}}

  {{#uxs-pane main=true padded=false}}

    {{uxs-pagination-controls
      size=100
      page=1
      total=250
      style="light"
    }}

    {{#uxs-list as |list|}}
      {{#each model as |person|}}
        {{#list.item bordered=true lines=3 as |item|}}
          {{#item.aside}}
            {{item.avatar-text "JW" style="dark"}}
          {{/item.aside}}
          {{#item.body}}
            {{item.title (concat person.first_name " " person.last_name)}}
            {{item.detail person.email}}
            {{item.detail person.gender}}
          {{/item.body}}
        {{/list.item}}
      {{/each}}
    {{/uxs-list}}

    {{uxs-pagination-controls
      size=100
      page=1
      total=250
      style="light"
    }}

  {{/uxs-pane}}

  {{#uxs-pane aside=true padded=true style="light"}}
    {{#uxs-button-group
      align=align
      disabled=disabled
      inline=inline
      mini=mini
    as |group|
    }}
      {{group.button "Save"}}
      {{group.button "Save & Publish"}}
      {{group.link "Cancel" "docs.forms.buttons"}}
    {{/uxs-button-group}}
  {{/uxs-pane}}

{{/uxs-window}}
