{{#uxs-header
  image="https://placeimg.com/2560/1600/any/grayscale"
  style="dark on-light"
as |header|
}}
  {{#header.toolbar as |toolbar|}}
    {{toolbar.back "arrow_back"}}
    {{toolbar.spacer}}
    {{toolbar.action "filter_list"}}
    {{toolbar.action "file_download"}}
    {{toolbar.action "search"}}
  {{/header.toolbar}}
  {{#header.title "People"}}
    {{uxs-action-menu/mobile routes=(get-routes-for "person" "index")}}
  {{/header.title}}
{{/uxs-header}}

{{#uxs-window}}

  {{#uxs-pane main=true padded=false}}

    {{uxs-pagination-controls
      size=25
      page=1
      total=250
      style="light"
    }}

    {{app/people-list people=model filter=true}}

    {{uxs-pagination-controls
      size=25
      page=1
      total=250
      style="light"
    }}

  {{/uxs-pane}}

  {{#uxs-pane
    aside=true
    padded=true
    style="light"
    order=2
    class="lg:pt2 sm:hidden sm:invisible"
  }}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "index")}}
  {{/uxs-pane}}

{{/uxs-window}}
