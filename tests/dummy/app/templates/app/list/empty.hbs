{{#uxs-header
  image="https://placeimg.com/2560/1600/any/grayscale"
  style="dark on-light"
as |header|
}}
  {{#header.toolbar as |toolbar|}}
    {{toolbar.back "arrow_back"}}
    {{toolbar.spacer}}
    {{toolbar.action "filter_list"}}
    {{toolbar.action "file_download"}}
    {{toolbar.action "search"}}
  {{/header.toolbar}}
  {{header.title "People"}}
{{/uxs-header}}

{{#uxs-window}}

  {{#uxs-pane main=true padded=false}}

    {{uxs-pagination-controls
      size=25
      page=1
      total=0
      style="light"
    }}

    {{#uxs-list grow=true}}

      {{#uxs-splash
        align="center"
        style="dark"
      as |splash|
      }}
        {{splash.icon "hourglass_empty"}}
        {{splash.title "No People"}}
        {{splash.text "It seems you don't have any people right now, hit the + button to start adding." align="center"}}
      {{/uxs-splash}}

    {{/uxs-list}}

    {{uxs-pagination-controls
      size=25
      page=1
      total=0
      style="light"
    }}

  {{/uxs-pane}}

  {{#uxs-pane aside=true padded=true style="light" class="lg:pt3"}}

    {{#uxs-button-group
      align=align
      disabled=disabled
      inline=inline
      mini=mini
    as |group|
    }}
      {{group.link "Populated List" "app.list.index"}}
      {{group.link "Filtered List" "app.list.filtered"}}
      {{group.link "Empty List" "app.list.empty"}}
      {{group.link "Loading List" "app.list.loading"}}
    {{/uxs-button-group}}
  {{/uxs-pane}}

{{/uxs-window}}
