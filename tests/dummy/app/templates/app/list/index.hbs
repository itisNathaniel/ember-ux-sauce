{{#uxs-header
  image="https://placeimg.com/2560/1600/any/grayscale"
  style="dark on-light"
as |header|
}}
  {{#header.toolbar as |toolbar|}}
    {{toolbar.back "arrow_back"}}
    {{toolbar.spacer}}
    {{toolbar.action "filter_list"}}
    {{toolbar.action "file_download"}}
    {{toolbar.action "search"}}
  {{/header.toolbar}}
  {{#header.title "People"}}
    {{app/people-actions/mobile-list}}
  {{/header.title}}

{{/uxs-header}}

{{#uxs-window}}

  {{#uxs-pane main=true padded=false order=1}}

    {{uxs-pagination-controls
      size=25
      page=1
      total=250
      style="light"
    }}

    {{app/people-list people=model}}

    {{uxs-pagination-controls
      size=25
      page=1
      total=250
      style="light"
    }}

  {{/uxs-pane}}

  {{#uxs-pane aside=true padded=true style="light" order=2 class="lg:pt3"}}
    {{app/people-actions/desktop-list}}
  {{/uxs-pane}}

{{/uxs-window}}
