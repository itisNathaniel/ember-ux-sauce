{{#uxs-app-bar style="extended" as |bar|}}
  {{bar.navigation "arrow_back" "app.dash"}}
  {{bar.title "People"}}
  {{bar.action "filter_list"}}
  {{bar.action "swap_vert"}}
  {{bar.action "search"}}
{{/uxs-app-bar}}

{{#uxs-window}}

  {{#uxs-pane main=true order=1}}

    {{uxs-pagination-controls
      size=25
      page=1
      total=250
      style="light"
    }}

    {{app/people-list people=model}}

    {{uxs-pagination-controls
      size=25
      page=1
      total=250
      style="light"
    }}

  {{/uxs-pane}}

  {{#uxs-pane
    aside=true
    padded=true
    style="light"
    order=2
  }}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "index")}}
  {{/uxs-pane}}

{{/uxs-window}}
