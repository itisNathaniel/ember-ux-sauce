{{#uxs-header
  image="https://placeimg.com/2560/1600/any/grayscale"
  style="dark on-white"
as |header|
}}
  {{#header.toolbar as |toolbar|}}
    {{toolbar.spacer}}
  {{/header.toolbar}}
  {{header.logo "sauce-logo.large"}}
{{/uxs-header}}

{{#uxs-window style="dashboard"}}

  {{#uxs-pane full=true padded=true style="dashboard"}}

    {{#uxs-tiles size="medium" style="light" as |row|}}
      {{row.tile}}
      {{row.tile}}
      {{row.tile}}
    {{/uxs-tiles}}

    {{#uxs-tiles size="small" style="light" as |row|}}
      {{row.tile}}
      {{row.tile}}
      {{row.tile}}
      {{row.tile}}
      {{row.tile}}
      {{row.tile}}
      {{row.tile}}
      {{row.tile}}
    {{/uxs-tiles}}

    {{#uxs-tiles size="large" style="light" as |row|}}
      {{row.tile}}
      {{row.tile}}
    {{/uxs-tiles}}

  {{/uxs-pane}}

{{/uxs-window}}
