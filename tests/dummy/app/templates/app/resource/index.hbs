{{#uxs-app-bar style="extended" as |bar|}}
  {{bar.navigationLink "arrow_back" "app.list.index"}}
  {{bar.title "View Person"}}
{{/uxs-app-bar}}

{{#uxs-breadcrumb
  style="light"
  detail=true
as |crumb|
}}
  {{crumb.link "App" "app.dash"}}
  {{crumb.link "People" "app.list.index"}}
  {{crumb.item (concat "View " model.first_name " " model.last_name)}}
{{/uxs-breadcrumb}}

{{#uxs-window}}

  {{#uxs-pane main=true order=1}}

    {{#uxs-window}}

      {{#uxs-pane
        split=true
        order=2
        class="p-1"
      }}

        {{app/people-details model=model}}

      {{/uxs-pane}}

      {{#uxs-pane
        padding=true
        split=true
        order=1
        class="p"
      }}

        {{#uxs-card as |card|}}
          {{#card.header}}
            {{card.headline "Activate Account"}}
            {{card.text "This account needs to be activated" color="grey"}}
          {{/card.header}}
          {{#card.body}}
            {{#card.text color="grey"}}
              An invitation email was sent to {{model.email}} with an activation link.
            {{/card.text}}
          {{/card.body}}
          {{#card.footer}}
            {{card.action "Resend Email"}}
          {{/card.footer}}
        {{/uxs-card}}

      {{/uxs-pane}}

    {{/uxs-window}}

  {{/uxs-pane}}

  {{#uxs-pane
    aside=true
    style="light"
    order=2
    class="ph-1"
    padded=false
  }}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "resource")}}
  {{/uxs-pane}}

{{/uxs-window}}
