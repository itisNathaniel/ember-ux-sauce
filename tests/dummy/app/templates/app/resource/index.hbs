{{#uxs-header
  image="https://placeimg.com/2560/1600/any/grayscale"
  style="dark on-light"
as |header|
}}
  {{#header.toolbar as |toolbar|}}
    {{toolbar.back "arrow_back"}}
    {{toolbar.spacer}}
  {{/header.toolbar}}
  {{#header.title "View Person"}}
    {{uxs-action-menu/mobile routes=(get-routes-for "person" "resource")}}
  {{/header.title}}

{{/uxs-header}}

{{#uxs-window}}

  {{#uxs-pane main=true padded=false order=1}}

    {{#uxs-breadcrumb
      style="light"
      detail=true
    as |crumb|
    }}
      {{crumb.link "App" "app.dash"}}
      {{crumb.link "People" "app.list.index"}}
      {{crumb.item (concat "View " model.first_name " " model.last_name)}}
    {{/uxs-breadcrumb}}

    {{#uxs-window}}

      {{#uxs-pane
        split=true
        order=2
        style="archive-form"
      }}
        {{app/people-details model=model}}

      {{/uxs-pane}}

      {{#uxs-pane
        padding=true
        split=true
        order=1
      }}

        {{#uxs-callout as |callout|}}
          {{callout.icon "info"}}
          {{callout.title "Activate Account"}}
          {{#callout.text}}
            An invitation email was sent to {{model.email}} with an activation link.
            This account needs to be activated
          {{/callout.text}}
          {{callout.button "Resend Email"}}
        {{/uxs-callout}}

      {{/uxs-pane}}

    {{/uxs-window}}

  {{/uxs-pane}}

  {{#uxs-pane aside=true padded=true style="light" order=2 class="lg:pt2 sm:hidden sm:invisible"}}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "resource")}}
  {{/uxs-pane}}

{{/uxs-window}}
