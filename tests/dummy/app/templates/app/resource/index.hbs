{{#uxs-app-bar style="extended" as |bar|}}
  {{bar.navigationLink "arrow_back" "app.list.index"}}
  {{bar.title "View Person"}}
{{/uxs-app-bar}}

{{#uxs-window}}

  {{#uxs-pane main=true order=1}}

    {{#uxs-breadcrumb
      style="light"
      detail=true
    as |crumb|
    }}
      {{crumb.link "App" "app.dash"}}
      {{crumb.link "People" "app.list.index"}}
      {{crumb.item (concat "View " model.first_name " " model.last_name)}}
    {{/uxs-breadcrumb}}

    {{#uxs-window}}

      {{#uxs-pane
        split=true
        order=2
        class="p-2"
      }}

        {{app/people-details model=model}}

      {{/uxs-pane}}

      {{#uxs-pane
        padding=true
        split=true
        order=1
      }}

        {{#uxs-callout as |callout|}}
          {{callout.icon "info"}}
          {{callout.title "Activate Account"}}
          {{#callout.text}}
            An invitation email was sent to {{model.email}} with an activation link.
            This account needs to be activated
          {{/callout.text}}
          {{callout.button "Resend Email"}}
        {{/uxs-callout}}

      {{/uxs-pane}}

    {{/uxs-window}}

  {{/uxs-pane}}

  {{#uxs-pane aside=true padded=true style="light" order=2}}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "resource")}}
  {{/uxs-pane}}

{{/uxs-window}}
