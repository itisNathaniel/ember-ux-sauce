{{#uxs-header
  image="https://placeimg.com/2560/1600/any/grayscale"
  style="dark on-light"
as |header|
}}
  {{#header.toolbar as |toolbar|}}
    {{toolbar.back "arrow_back"}}
    {{toolbar.spacer}}
  {{/header.toolbar}}
  {{#header.title "Archive Person"}}
    {{uxs-action-menu/mobile routes=(get-routes-for "person" "resource")}}
  {{/header.title}}

{{/uxs-header}}

{{#uxs-window}}

  {{#uxs-pane main=true padded=false order=1}}

    {{#uxs-breadcrumb
      style="light"
      detail=true
    as |crumb|
    }}
      {{crumb.link "App" "app.dash"}}
      {{crumb.link "People" "app.list.index"}}
      {{crumb.item (concat "Archive " model.first_name " " model.last_name)}}
    {{/uxs-breadcrumb}}

    {{#uxs-archive-form
      model=model
      cancelRoute="app.resource.index"
    }}

      {{#uxs-content}}This will archive the Person: <b>{{concat model.first_name " " model.last_name}}</b>.{{/uxs-content}}

      {{#uxs-content}}This person will no longer appear in the system. All data will be archived and require a manual process to restore.{{/uxs-content}}

    {{/uxs-archive-form}}

  {{/uxs-pane}}

  {{#uxs-pane aside=true padded=true style="light" order=2 class="lg:pt2 sm:hidden sm:invisible"}}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "resource")}}
  {{/uxs-pane}}

{{/uxs-window}}
