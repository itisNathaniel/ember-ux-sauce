{{#uxs-app-bar style="extended" as |bar|}}
  {{bar.navigationLink "arrow_back" "app.list.index"}}
  {{bar.title "Archive Person"}}
{{/uxs-app-bar}}

{{#uxs-breadcrumb
  style="light"
  detail=true
as |crumb|
}}
  {{crumb.link "App" "app.dash"}}
  {{crumb.link "People" "app.list.index"}}
  {{crumb.item (concat "Archive " model.first_name " " model.last_name)}}
{{/uxs-breadcrumb}}

{{#uxs-window}}

  {{#uxs-pane
    main=true
    order=1
    class="p"
  }}

    {{#uxs-window}}

      {{#uxs-pane
        padding=true
        split=true
        order=2
        style="archive-form"
      }}

        {{#uxs-typography as |type|}}
          {{type.headline "Archive this User?" 4 class="mb" color="error"}}
          {{#type.body class="mb"}}
            This will archive the User "<b>{{model.first_name}} {{model.last_name}}</b>".
          {{/type.body}}
          {{#type.body class="mb"}}
            This user will no longer appear in the system. All data will be archived and require a manual process to restore.
          {{/type.body}}
          {{uxs-button "Archive" color="error" class="mb"}}
          {{uxs-button-link "Cancel" "app.resource.index" style="naked" color="grey"}}
        {{/uxs-typography}}

      {{/uxs-pane}}

      {{#uxs-pane
        padding=true
        split=true
        style="archive-icon"
        order=1
      }}
        {{uxs-icon icon style="error" size="archive-icon"}}
      {{/uxs-pane}}

    {{/uxs-window}}

  {{/uxs-pane}}

  {{#uxs-pane
    aside=true
    style="light"
    order=2
    class="ph-1"
    padded=false
  }}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "resource")}}
  {{/uxs-pane}}

{{/uxs-window}}
