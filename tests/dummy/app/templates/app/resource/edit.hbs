{{#uxs-header
  image="https://placeimg.com/2560/1600/any/grayscale"
  style="dark on-light"
as |header|
}}
  {{#header.toolbar as |toolbar|}}
    {{toolbar.back "arrow_back"}}
    {{toolbar.spacer}}
  {{/header.toolbar}}
  {{#header.title "Edit Person"}}
    {{uxs-action-menu/mobile routes=(get-routes-for "person" "resource")}}
  {{/header.title}}

{{/uxs-header}}

{{#uxs-window}}

  {{#uxs-pane main=true padded=false order=1}}

    {{#uxs-breadcrumb
      style="light"
      detail=true
    as |crumb|
    }}
      {{crumb.link "App" "app.dash"}}
      {{crumb.link "People" "app.list.index"}}
      {{crumb.item (concat model.first_name " " model.last_name)}}
    {{/uxs-breadcrumb}}


    {{#uxs-form model=model as |form|}}
      {{form.control
        label="First Name"
        name="first_name"
        type="text"
      }}
      {{form.control
        label="Last Name"
        name="last_name"
        type="text"
      }}
      {{form.control
        label="Email"
        name="email"
        type="text"
      }}
      {{form.control
        label="Gender"
        name="gender"
        type="text"
      }}
      {{form.control
        label="IP Address"
        name="ip_address"
        type="text"
      }}
    {{/uxs-form}}

  {{/uxs-pane}}

  {{#uxs-pane aside=true padded=true style="light" order=2 class="lg:pt2 sm:hidden sm:invisible"}}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "resource")}}
  {{/uxs-pane}}

{{/uxs-window}}
