{{#uxs-app-bar style="extended" as |bar|}}
  {{bar.navigationLink "arrow_back" "app.list.index"}}
  {{bar.title "Edit Person"}}
{{/uxs-app-bar}}

{{#uxs-breadcrumb
  style="light"
  detail=true
as |crumb|
}}
  {{crumb.link "App" "app.dash"}}
  {{crumb.link "People" "app.list.index"}}
  {{crumb.item (concat "Edit " model.first_name " " model.last_name)}}
{{/uxs-breadcrumb}}

{{#uxs-window}}

  {{#uxs-pane
    main=true
    order=1
    class="p-1"
  }}

    {{#uxs-form style="outlined" as |form|}}

      {{#form.control
        name="first_name"
      as |control|
      }}
        {{control.label "First Name"}}
        {{control.input value=model.first_name}}
        {{control.tip "Please enter your first name"}}
      {{/form.control}}

      {{#form.control
        name="last_name"
      as |control|
      }}
        {{control.label "Last Name"}}
        {{control.input value=model.last_name}}
        {{control.tip "Please enter your last name"}}
      {{/form.control}}

      {{#form.control
        name="email"
      as |control|
      }}
        {{control.label "Email"}}
        {{control.input value=model.email sufixIcon="mail"}}
        {{control.tip "Please enter your email address"}}
      {{/form.control}}

      {{#form.control
        name="gender"
      as |control|
      }}
        {{control.label "Last Name"}}
        {{control.input value=model.last_name}}
        {{control.tip "Please select a gender"}}
      {{/form.control}}

      {{#form.control
        name="ip_address"
      as |control|
      }}
        {{control.label "IP Address"}}
        {{control.input value=model.ip_address}}
        {{control.tip "Enter your servers IP"}}
      {{/form.control}}

      {{#form.control
        name="dob"
      as |control|
      }}
        {{control.label "Date of Birth"}}
        {{control.date
          value=(readonly (moment-format model.dob "DD/MM/YY"))
          dateFormat="d/m/y"
          onChange=(action (mut model.dob))
        }}
        {{control.date-icon}}
      {{/form.control}}

      {{form.submit "Save" color="primary"}}
      {{form.button "Cancel" color="grey"}}

    {{/uxs-form}}

  {{/uxs-pane}}

  {{#uxs-pane
    aside=true
    style="light"
    order=2
    class="ph-1"
    padded=false
  }}
    {{uxs-action-menu/desktop routes=(get-routes-for "person" "resource")}}
  {{/uxs-pane}}

{{/uxs-window}}
