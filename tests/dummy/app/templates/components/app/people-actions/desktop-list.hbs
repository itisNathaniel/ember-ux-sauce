{{!-- This button group is hidden on small devices --}}
{{#uxs-button-group
  align="center"
  class="sm:invisible sm:hidden"
as |group|
}}
  {{#each routes as |item|}}
    {{!-- Replace this with params argument--}}
    {{#if model}}
      {{group.link item.title item.route model.id}}
    {{else}}
      {{group.link item.title item.route}}
    {{/if}}
  {{/each}}
{{/uxs-button-group}}
