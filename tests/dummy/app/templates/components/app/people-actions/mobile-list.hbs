{{#basic-dropdown class="uxs-header__mobile-menu" as |dropdown|}}
  {{#dropdown.trigger class="uxs-header__mobile-menu-trigger"}}
    {{uxs-icon "more_vert" style="white"}}
  {{/dropdown.trigger}}
  {{#dropdown.content class="uxs-header__mobile-menu-content"}}
    {{#uxs-menu as |menu|}}
      {{#each routes as |item|}}
        {{!-- Replace this with params argument--}}
        {{#if model}}
          {{menu.link item.title item.route model.id}}
        {{else}}
          {{menu.link item.title item.route}}
        {{/if}}
      {{/each}}
    {{/uxs-menu}}
  {{/dropdown.content}}
{{/basic-dropdown}}
