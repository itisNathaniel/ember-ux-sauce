{{#uxs-list grow=true as |list|}}

  {{#if filter}}

    {{list.notice
      "Displaying Filtered Results"
      style="accent"
      icon="filter_list"
      actionText="Clear"
    }}

  {{/if}}

  {{#each people as |person|}}

    {{#list.itemLink
      "app.resource.index" person.id
      bordered=true
      lines=3
    as |item|
    }}
      {{#item.aside}}
        {{item.avatar "XX"}}
      {{/item.aside}}
      {{#item.body}}
        {{item.title (concat person.first_name " " person.last_name)}}
        {{item.meta person.email}}
        {{item.meta person.gender}}
      {{/item.body}}
      {{#item.aside}}
        {{item.action "chevron_right"}}
      {{/item.aside}}
    {{/list.itemLink}}

  {{else if loading}}

    {{#list.item as |item|}}
      {{#item.body class="fx-ai-center"}}
        {{item.action "loading"}}
        {{item.meta "Loading data..."}}
      {{/item.body}}
    {{/list.item}}

  {{else}}

    {{#list.item as |item|}}
      {{#item.body class="fx-ai-center"}}
        {{item.action "info_outline"}}
        {{item.meta "No items found"}}
      {{/item.body}}
    {{/list.item}}

  {{/each}}

{{/uxs-list}}
