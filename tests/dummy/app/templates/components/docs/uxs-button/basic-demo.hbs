{{#docs-demo as |demo|}}

  {{#demo.example name="button-basic-demo.hbs"}}

    <div class="uxs">
      {{uxs-button
        text
        icon=icon
        disabled=disabled
        loading=loading
        style=style
        color=color
        radius=radius
      }}
    </div>

  {{/demo.example}}

  {{#args-table "button-basic-demo" as |table|}}
    {{#table.row "button-text" as |row|}}
      {{row.label "Text"}}
      {{row.input text }}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "button-icon" as |row|}}
      {{row.label "Icon"}}
      {{row.input icon }}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "button-disabled" as |row|}}
      {{row.label "Disabled"}}
      {{row.checkbox disabled }}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "button-loading" as |row|}}
      {{row.label "Loading"}}
      {{row.checkbox loading }}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "button-style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="button-styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "button-color" as |row|}}
      {{row.label "Color"}}
      {{row.input color options="colors"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "button-radii" as |row|}}
      {{row.label "Radius"}}
      {{row.input radius options="radii"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  <datalist id="button-styles">
    <option value="contained"/>
    <option value="outlined"/>
    <option value="naked"/>
  </datalist>

  <datalist id="radii">
    <option value="none"/>
    <option value="rounded"/>
    <option value="round"/>
  </datalist>

  <datalist id="colors">
    <option value="primary"/>
    <option value="accent"/>
    <option value="warning"/>
    <option value="error"/>
    <option value="dark"/>
    <option value="grey"/>
    <option value="mid"/>
    <option value="light"/>
    <option value="white"/>
  </datalist>


  {{demo.snippet "button-basic-demo.hbs"}}
{{/docs-demo}}
