  {{#demo.example name="form-date-basic-demo.hbs"}}

    {{uxs-form-date
      disabled=disabled
      inline=inline
      placeholder="Enter Date"
      style=style
      value=(readonly date)
      onChange=(action "setDate")
      class="mb"
    }}
    {{uxs-form-time
      disabled=disabled
      inline=inline
      placeholder="Enter Time"
      style=style
      value=(readonly time)
      onChange=(action "setTime")
      class="mb"
    }}
    {{uxs-form-date
      disabled=disabled
      inline=inline
      placeholder="Enter Datetime"
      style=style
      value=(readonly datetime)
      onChange=(action "setDate")
      class="mb"
    }}

  {{/demo.example}}

  {{#args-table "form-date-basic-demo" as |table|}}
    {{#table.row "disabled" as |row|}}
      {{row.label "disabled"}}
      {{row.checkbox disabled}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "inline" as |row|}}
      {{row.label "inline"}}
      {{row.checkbox inline}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

