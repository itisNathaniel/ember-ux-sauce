{{#docs-demo as |demo|}}

  {{#demo.example name="icon-basic-demo.hbs"}}

    <div class="uxs">
      {{uxs-icon
        icon
        style=style
        color=color
        disabled=disabled
      }}
    </div>

  {{/demo.example}}

  {{#args-table "icon-basic-demo" as |table|}}
    {{#table.row "icon" as |row|}}
      {{row.label "Icon"}}
      {{row.input icon}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "disabled" as |row|}}
      {{row.label "Disabled"}}
      {{row.checkbox disabled}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "button-style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="button-styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "button-color" as |row|}}
      {{row.label "Color"}}
      {{row.input color options="colors"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  <datalist id="button-styles">
    <option value="regular"/>
    <option value="large"/>
  </datalist>

  <datalist id="colors">
    <option value="primary"/>
    <option value="accent"/>
    <option value="warning"/>
    <option value="error"/>
    <option value="dark"/>
    <option value="grey"/>
    <option value="mid"/>
    <option value="light"/>
    <option value="white"/>
  </datalist>

  {{demo.snippet "icon-basic-demo.hbs"}}

{{/docs-demo}}
