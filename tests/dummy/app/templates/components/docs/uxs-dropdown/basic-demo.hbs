{{#docs-demo as |demo|}}

  {{#demo.example name='form-dropdown-basic-demo.hbs'}}

    {{#uxs-form-dropdown
      disabled=disabled
      selected=name
      options=nameOptions
      onchange=(action (mut name))
      name="my-dropdown"
      style=style
      inline=inline
      as |name|
    }}
      {{name}}
    {{/uxs-form-dropdown}}

    <div class="mt detail">Selected: <b>{{name}}</b></div>

  {{/demo.example}}

  {{#args-table "form-dropdown-basic-demo" as |table|}}
    {{#table.row "disabled" as |row|}}
      {{row.label "disabled"}}
      {{row.checkbox disabled}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "inline" as |row|}}
      {{row.label "inline"}}
      {{row.checkbox inline}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet 'form-dropdown-basic-demo.hbs'}}

{{/docs-demo}}
