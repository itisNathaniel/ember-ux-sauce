{{#docs-demo as |demo|}}

  {{#demo.example name="notice-button-demo.hbs"}}

    {{#uxs-notice
      style=style
      disabled=disabled
      truncated=truncated
    as |notice|
    }}
      {{notice.link "home" "docs.quickstart"}}
      {{notice.text "This notice has a prefix link"}}
    {{/uxs-notice}}

    {{#uxs-notice
      style=style
      disabled=disabled
      truncated=truncated
    as |notice|
    }}
      {{notice.text "This notice has a suffix button"}}
      {{notice.button "close" onClick=(action "closeNotice")}}
    {{/uxs-notice}}

  {{/demo.example}}

  {{demo.snippet "notice-button-demo.hbs"}}
  {{demo.snippet "notice-button-demo.js"}}

  {{#args-table "notice-button-demo" as |table|}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "disabled" as |row|}}
      {{row.label "Disabled"}}
      {{row.checkbox disabled}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "truncated" as |row|}}
      {{row.label "Truncated"}}
      {{row.checkbox truncated}}
      {{row.type "Boolean"}}
    {{/table.row}}
  {{/args-table}}

{{/docs-demo}}
