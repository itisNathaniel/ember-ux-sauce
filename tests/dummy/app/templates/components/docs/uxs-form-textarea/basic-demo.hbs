{{#docs-demo as |demo|}}

  {{#demo.example name='form-textarea-basic-demo.hbs'}}

    {{uxs-form-textarea
      cols=cols
      disabled=disabled
      enter=(action "enterPressed" value)
      inline=inline
      placeholder=placeholder
      rows=rows
      style=style
      value=value
    }}

  {{/demo.example}}

  {{#args-table "form-textarea-basic-demo" as |table|}}
    {{#table.row "cols" as |row|}}
      {{row.label "Cols"}}
      {{row.input cols}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "disabled" as |row|}}
      {{row.label "disabled"}}
      {{row.checkbox disabled}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "inline" as |row|}}
      {{row.label "inline"}}
      {{row.checkbox inline}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "rows" as |row|}}
      {{row.label "Rows"}}
      {{row.input rows}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "type" as |row|}}
      {{row.label "Type"}}
      {{row.input type options=form-types}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "value" as |row|}}
      {{row.label "Value"}}
      {{row.input value}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet 'form-textarea-basic-demo.hbs'}}

{{/docs-demo}}
