{{#docs-demo as |demo|}}

  {{#demo.example name="datalist-yeild-demo.hbs"}}

    {{#uxs-datalist empty=null bordered=bordered style=style as |list|}}
      {{#list.item as |item|}}
        {{item.label "Name"}}
        {{#item.row}}
          {{item.value "Frida Wardlaw"}}
        {{/item.row}}
      {{/list.item}}
      {{#list.item as |item|}}
        {{item.label "GID"}}
        {{#item.row}}
          {{item.value "0123456789"}}
        {{/item.row}}
      {{/list.item}}
      {{#list.item as |item|}}
        {{item.label "Job Title"}}
        {{#item.row}}
          {{item.value "Kid"}}
        {{/item.row}}
      {{/list.item}}
      {{#list.item as |item|}}
        {{item.label "Email"}}
        {{#item.row}}
          {{item.empty "No Email"}}
        {{/item.row}}
      {{/list.item}}
      {{#list.item as |item|}}
        {{item.label "Last Login"}}
        {{#item.row}}
          {{item.value "20/01/18"}}
        {{/item.row}}
        {{item.tip "This is the last time the user accessed the system"}}
      {{/list.item}}
      {{#list.item  as |item|}}
        {{item.label "Address"}}
        {{#item.group}}
          {{item.value "126 Queen St"}}
          {{item.value "Hull"}}
          {{item.value "East Yorkshire"}}
          {{item.value "HU1 1UU"}}
        {{/item.group}}
      {{/list.item}}
    {{/uxs-datalist}}

  {{/demo.example}}

  {{#args-table "datalist-yeild-demo" as |table|}}
    {{#table.row "bordered" as |row|}}
      {{row.label "Bordered"}}
      {{row.checkbox bordered}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "style" as |row|}}
      {{row.label "style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet "datalist-yeild-demo.hbs"}}

{{/docs-demo}}
