{{#docs-demo as |demo|}}

  {{#demo.example name="fab-basic-demo.hbs"}}

    <div class="uxs">
      {{uxs-fab
        param1
        param2
        disabled=disabled
        loading=loading
        style=style
        color=color
      }}
    </div>

  {{/demo.example}}

  {{#args-table "fab-basic-demo" as |table|}}
    {{#table.row "fab-icon" as |row|}}
      {{row.label "Icon"}}
      {{row.input icon }}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "fab-text" as |row|}}
      {{row.label "Text"}}
      {{row.input text }}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "fab-disabled" as |row|}}
      {{row.label "Disabled"}}
      {{row.checkbox disabled }}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "fab-loading" as |row|}}
      {{row.label "Loading"}}
      {{row.checkbox loading }}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "fab-style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="fab-styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "fab-color" as |row|}}
      {{row.label "Color"}}
      {{row.input color options="colors"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}


  <datalist id="fab-styles">
    <option value="regular"/>
    <option value="mini"/>
    <option value="extended"/>
  </datalist>

  <datalist id="colors">
    <option value="primary"/>
    <option value="accent"/>
    <option value="warning"/>
    <option value="error"/>
    <option value="dark"/>
    <option value="grey"/>
    <option value="mid"/>
    <option value="light"/>
    <option value="white"/>
  </datalist>


  {{demo.snippet "fab-basic-demo.hbs"}}
{{/docs-demo}}
