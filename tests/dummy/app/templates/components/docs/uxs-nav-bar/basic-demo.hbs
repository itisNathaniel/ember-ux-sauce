{{#docs-demo as |demo|}}

  {{#demo.example name="nav-bar-basic-demo.hbs" class="uxs"}}

    {{#uxs-nav-bar fixed=fixed as |bar|}}
      {{bar.title title}}
      {{bar.spacer}}
      {{#bar.menu as |nav|}}
        {{nav.item "Home"}}
        {{nav.item "Account"}}
        {{nav.item "Logout"}}
      {{/bar.menu}}
    {{/uxs-nav-bar}}

  {{/demo.example}}

  {{#args-table "nav-bar-basic-demo" as |table|}}
    {{#table.row "title" as |row|}}
      {{row.label "Title"}}
      {{row.input title}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "fixed" as |row|}}
      {{row.label "Fixed"}}
      {{row.checkbox fixed}}
      {{row.type "Bolean"}}
    {{/table.row}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet "nav-bar-basic-demo.hbs"}}

{{/docs-demo}}
