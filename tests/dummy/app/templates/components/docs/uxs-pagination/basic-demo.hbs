{{#docs-demo as |demo|}}

  {{#demo.example name="pagination-basic-demo.hbs"}}

    {{uxs-pagination-controls
      size=model.meta.size
      page=model.meta.page
      total=model.meta.total
      style=style
      resultsLabel=resultsLabel
      countPrefix=countPrefix
      countSuffix=countSuffix
      onChange=(action "paginateResults")
    }}

    {{uxs-pagination-controls
      size=foo.size
      page=foo.page
      total=foo.total
    }}

  {{/demo.example}}

  {{#args-table "pagination-basic-demo" as |table|}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "resultsLabel" as |row|}}
      {{row.label "Label"}}
      {{row.input resultsLabel}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "countPrefix" as |row|}}
      {{row.label "Prefix"}}
      {{row.input countPrefix}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "countSuffix" as |row|}}
      {{row.label "Suffix"}}
      {{row.input countSuffix}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet "pagination-basic-demo.hbs"}}
  {{demo.snippet "pagination-basic-demo.js"}}

{{/docs-demo}}
