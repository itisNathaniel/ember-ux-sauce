{{#docs-demo as |demo|}}

  {{#demo.example name='ol-basic-demo.hbs'}}

    {{#uxs-ol
      color=color
      size=size
      style=style
      weight=weight
      as |list|
    }}
      {{list.item "Item One"}}
      {{list.item "Item Two"}}
      {{#list.ol as |sublist|}}
        {{sublist.item "Item Three a"}}
        {{sublist.item "Item Three b"}}
        {{sublist.item "Item Three c"}}
      {{/list.ol}}
      {{list.item "Item Four"}}
    {{/uxs-ol}}

  {{/demo.example}}

  {{#args-table "ol-basic-demo" as |table|}}
    {{#table.row "color" as |row|}}
      {{row.label "Color"}}
      {{row.input color options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "size" as |row|}}
      {{row.label "Size"}}
      {{row.input size options="sizes"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "weight" as |row|}}
      {{row.label "Weight"}}
      {{row.input weight options="weights"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet 'ol-basic-demo.hbs'}}

{{/docs-demo}}
