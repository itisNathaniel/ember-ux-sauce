    {{#uxs-pane aside=true style=asideStyle padded=padded}}
      {{uxs-heading "Aside"}}
      {{uxs-button "Action 1"}}
      {{uxs-button "Action 2"}}
      {{uxs-button "Action 3"}}
    {{/uxs-pane}}
  {{/uxs-window}}

  {{/demo.example}}

  {{#args-table "threes-pane" as |table|}}
    {{#table.row "padded" as |row|}}
      {{row.label "Padded"}}
      {{row.checkbox padded}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "indexStyle" as |row|}}
      {{row.label "Index Style"}}
      {{row.input indexStyle options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "detailStyle" as |row|}}
      {{row.label "Detail Style"}}
      {{row.input detailStyle options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "asideStyle" as |row|}}
      {{row.label "Main Style"}}
      {{row.input asideStyle options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

