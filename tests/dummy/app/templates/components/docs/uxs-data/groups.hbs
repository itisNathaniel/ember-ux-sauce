{{#docs-demo as |demo|}}

  {{#demo.example name="data-groups-demo.hbs"}}

    {{#uxs-data
      display=display
      padded=padded
      inset=inset
    as |data|
    }}
      {{#data.item as |item|}}
        {{item.label "Label"}}
        {{item.value "Value"}}
      {{/data.item}}
      {{#data.item as |item|}}
        {{item.label "Grouped Label"}}
        {{#item.group as |group|}}
          {{group.value "Value One"}}
          {{group.value "Value Two"}}
          {{group.value "Value Three"}}
        {{/item.group}}
        {{item.tip "Here's the tip"}}
      {{/data.item}}
      {{#data.item as |item|}}
        {{item.label "More Groups"}}
        {{#item.group as |group|}}
          {{group.value "Value One"}}
          {{group.value "Value Two sociosqu a mi donec sit ligula sit euismod parturient ipsum dictum facilisis"}}
          {{group.value "Value Three"}}
        {{/item.group}}
        {{item.tip "Here's the tip"}}
      {{/data.item}}
    {{/uxs-data}}

  {{/demo.example}}

  {{#args-table "datalist-groups-demo" as |table|}}
    {{#table.row "layout" as |row|}}
      {{row.label "Layout"}}
      {{row.input display options="data-layouts"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "padded" as |row|}}
      {{row.label "Padded"}}
      {{row.checkbox padded}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "inset" as |row|}}
      {{row.label "Inset"}}
      {{row.checkbox inset}}
      {{row.type "Boolean"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet "data-groups-demo.hbs"}}

  <datalist id="data-layouts">
    <option value="cell"/>
    <option value="inline"/>
    <option value="list"/>
    <option value="table"/>
  </datalist>

{{/docs-demo}}
