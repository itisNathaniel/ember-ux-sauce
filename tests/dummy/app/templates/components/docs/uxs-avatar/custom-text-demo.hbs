{{#docs-demo as |demo|}}

  {{#demo.example name="custom-text-demo.hbs"}}

    {{#uxs-avatar-text
      bordered=borderd
      rounded=rounded
      size=size
      style=style
    as |avatar|
    }}
      {{avatar.large "99"}}
      {{avatar.small "THINGS"}}
    {{/uxs-avatar-text}}

  {{/demo.example}}

  {{#args-table "custom-text-avatar" as |table|}}
    {{#table.row "bordered" as |row|}}
      {{row.label "Bordered"}}
      {{row.checkbox bordered}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "rounded" as |row|}}
      {{row.label "Rounded"}}
      {{row.checkbox rounded}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "size" as |row|}}
      {{row.label "Size"}}
      {{row.input size options="sizes"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet "custom-text-demo.hbs"}}

{{/docs-demo}}
