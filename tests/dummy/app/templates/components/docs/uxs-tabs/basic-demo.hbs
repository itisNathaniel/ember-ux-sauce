{{#docs-demo as |demo|}}

  {{#demo.example name="basic-tabs.hbs"}}

    {{#uxs-tabs align=align disabled=disabled style=style as |tab|}}
      {{tab.link "Dog" "docs.navigation.tabs.dogs"}}
      {{tab.link "Cat" "docs.navigation.tabs.cats"}}
      {{tab.item "Fish" onClick=(action "swimFish")}}
    {{/uxs-tabs}}

  {{/demo.example}}

  {{demo.snippet "basic-tabs.hbs"}}

  {{#args-table "tabs" as |table|}}
    {{#table.row "align" as |row|}}
      {{row.label "Align"}}
      {{row.input align options="align-directions"}}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "disabled" as |row|}}
      {{row.label "Disabled"}}
      {{row.checkbox disabled}}
      {{row.type "Boolean"}}
    {{/table.row}}
    {{#table.row "style" as |row|}}
      {{row.label "Style"}}
      {{row.input style options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}
{{/docs-demo}}
