{{#docs-demo as |demo|}}

  {{#demo.example name="list-items-avatar-demo.hbs"}}

    {{#uxs-list lines=3 bordered=true as |list|}}
      {{#each items as |thing|}}
        {{#list.item as |item|}}
          {{#item.aside}}
            {{item.avatar "https://placeimg.com/100/100/any" round=true}}
          {{/item.aside}}
          {{#item.body}}
            {{item.title thing.title}}
            {{item.detail thing.location}}
            {{item.detail thing.email}}
          {{/item.body}}
          {{#item.aside}}
            {{item.action "keyboard_arrow_right"}}
          {{/item.aside}}
        {{/list.item}}
      {{/each}}
    {{/uxs-list}}

  {{/demo.example}}

  {{demo.snippet "list-items-avatar-demo.hbs"}}

