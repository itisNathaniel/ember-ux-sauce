{{#docs-demo as |demo|}}

  {{#demo.example name="three-line-list-demo.hbs" class="uxs"}}

    {{#uxs-list as |list|}}
      {{#each @rows as |row|}}
        {{#list.item as |item|}}
          {{#item.aside}}
            {{item.avatar (concat "https://i.pravatar.cc/144?u=" row.email) image=true}}
          {{/item.aside}}
          {{#item.body}}
            {{item.title row.title}}
            {{item.meta row.location}}
            {{item.meta row.email}}
          {{/item.body}}
          {{#item.aside}}
            {{item.metaLink "More" "docs.index"}}
          {{/item.aside}}
        {{/list.item}}
      {{/each}}
    {{/uxs-list}}

  {{/demo.example}}

  {{demo.snippet "three-line-list-demo.hbs"}}

{{/docs-demo}}
