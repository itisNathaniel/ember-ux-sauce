{{#docs-demo as |demo|}}

  {{#demo.example name="avatar-text-demo.hbs" class="uxs"}}

    {{uxs-list/avatar
      content
      color=color
    }}

  {{/demo.example}}

  {{#args-table "text-avatar" as |table|}}
    {{#table.row "content" as |row|}}
      {{row.label "Text"}}
      {{row.input content }}
      {{row.type "String"}}
    {{/table.row}}
    {{#table.row "color" as |row|}}
      {{row.label "Color"}}
      {{row.input color options="styles"}}
      {{row.type "String"}}
    {{/table.row}}
  {{/args-table}}

  {{demo.snippet "avatar-text-demo.hbs"}}

{{/docs-demo}}
