{{#uxs-form
  style=@style
  onSubmit=(action "save")
as |form|}}

  {{#form.control
    name="email"
  as |control|
  }}
    {{control.label "Email"}}
    {{control.input value=@model.email prefixText="$"}}
    {{control.tip "Please enter your email address"}}
  {{/form.control}}

  {{#form.control
    name="handle"
  as |control|
  }}
    {{control.label "Handle"}}
    {{control.input value=@model.handle suffixIcon="face"}}
    {{control.tip handleTip align="right"}}
  {{/form.control}}

  {{#form.control
    name="number"
    error="This field should be numeric and less than 100"
  as |control|
  }}
    {{control.label "Number"}}
    {{control.input value=@model.number}}
    {{control.tip "Please enter your email address"}}
  {{/form.control}}

  {{#form.control
    name="username"
  as |control|
  }}
    {{control.label "Username"}}
    {{control.input value=@model.username suffixText="@wearesauce.io" align="right"}}
    {{control.tip "Please enter a unique username"}}
  {{/form.control}}

  {{#form.control
    name="username"
  as |control|
  }}
    {{control.label "Password"}}
    {{control.input value=@model.password suffixIcon="visibility_off" type="password" autocomplete="off"}}
    {{control.error "Passwords must contain an upper case letter, a numeric character and a special character."}}
  {{/form.control}}

  {{#form.control
    name="animals"
  as |control|
  }}
    {{control.label "Animal"}}
    {{#control.dropdown
      options=animalOptions
      selected=@model.animal
      onchange=(action (mut @model.animal))
      searchEnabled=true
      searchPlaceholder="Search Animals..."
      allowClear=true
    as |name|}}
      {{name}}
    {{/control.dropdown}}
  {{/form.control}}

  {{#form.control
    name="animals"
  as |control|
  }}
    {{control.label "Animals"}}
    {{#control.multi-dropdown
      options=animalOptions
      selected=@model.animals
      onchange=(action (mut @model.animals))
      searchEnabled=true
      searchPlaceholder="Search Animals..."
      allowClear=true
    as |name|}}
      {{name}}
    {{/control.multi-dropdown}}
  {{/form.control}}

  {{#form.control
    name="dob"
  as |control|
  }}
    {{control.label "Date of Birth"}}
    {{control.date
      value=(readonly @model.dob)
      onChange=(action "setDate")
    }}
    {{control.date-icon}}
  {{/form.control}}

  {{#form.control
    name="cuisine"
  as |control|
  }}
    {{control.label "What cuisine do you like?"}}
    {{control.checkbox label="Chinese" checked=@model.chinese}}
    {{control.checkbox label="French" checked=@model.french}}
    {{control.checkbox label="Indian" checked=@model.indian}}
    {{control.checkbox label="Italian" checked=@model.italian}}
    {{control.checkbox label="Spanish" checked=@model.spanish}}
    {{control.tip "Check out this bunch of textboxes"}}
  {{/form.control}}

  {{#form.control
    name="gender"
  as |control|
  }}
    {{control.label "Gender"}}
    {{control.radio label="Female" value="female" checked=@model.gender}}
    {{control.radio label="Male" value="male" checked=@model.gender}}
    {{control.radio label="N/A" value=null checked=@model.gender}}
    {{control.tip "State your gender"}}
  {{/form.control}}

  {{#form.control
    name="foo"
  as |control|
  }}
    {{control.label "Foo"}}
    {{control.input value=@model.foo}}
  {{/form.control}}

  {{#form.control
    name="bar"
  as |control|
  }}
    {{control.label "Bar"}}
    {{control.input value=@model.bar}}
  {{/form.control}}

  {{#form.control
    name="bio"
  as |control|
  }}
    {{control.label "Biography"}}
    {{control.textarea value=@model.bio autoresize=true}}
    {{control.tip "Tell us about yourself"}}
  {{/form.control}}

  {{#form.control
    name="animals"
  as |control|
  }}
    {{control.label "Animal"}}
    {{#control.dropdown
      options=animalOptions
      selected=@model.animal
      onchange=(action (mut @model.animal))
      searchEnabled=false
    as |name|}}
      {{name}}
    {{/control.dropdown}}
  {{/form.control}}

  {{form.submit "Submit" color="accent"}}
  {{form.reset "Reset" color="grey"}}

{{/uxs-form}}
