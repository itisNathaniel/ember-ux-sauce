<h2>Toolbar Search</h2>

{{#docs-demo as |demo|}}

  {{#demo.example name="toolbar-search" theme="accent"}}

    {{#uxs-toolbar as |toolbar|}}
      {{toolbar.back "arrow_back"}}
      {{toolbar.title (concat "Toolbar: " searchTerm)}}
      {{toolbar.spacer}}
      {{toolbar.action "filter_list"}}
      {{toolbar.action "file_download"}}
      {{toolbar.search value=searchTerm}}
    {{/uxs-toolbar}}

  {{/demo.example}}

  {{demo.snippet "toolbar-search.hbs"}}

{{/docs-demo}}

