{{yield
  (hash
    control=(
      component "uxs-form/control"
      disabled=@disabled
      style=@style
    )
    submit=(
      component "uxs-button"
      type="submit"
      loading=submitTask.isRunning
      color="accent"
      task=submitTask
    )
    button=(
      component "uxs-button"
      type="button"
      color="primary"
    )
    reset=(
      component "uxs-button"
      type="reset"
      color="grey"
    )
    buttonLink=(
      component "uxs-button-link"
      type="button"
      style="naked"
      color="grey"
    )
    isSubmitting=submitTask.isRunning
    didSubmit=submitTask.performCount
  )
}}
