{{yield
  (hash
    control=(
      component "uxs-form/control"
      disabled=@disabled
      style=@style
    )
    submit=(
      component "uxs-button"
      type="submit"
      disabled=@disabled
      color="accent"
    )
    button=(
      component "uxs-button"
      type="button"
      disabled=@disabled
      color="primary"
    )
    reset=(
      component "uxs-button"
      type="reset"
      disabled=@disabled
      color="grey"
    )
  )
}}
