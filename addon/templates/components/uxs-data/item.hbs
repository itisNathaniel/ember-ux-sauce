{{#if label}}
  {{uxs-data/label
    label
    display=display
    padded=padded
    inset=inset
    name=name
  }}
{{/if}}

{{!--
  Do not show inline value when the value is empty or is in block mode
--}}
{{#if (and (not hasBlock) (or value label))}}
  {{uxs-data/value
    value
    display=display
    padded=padded
    inset=inset
    name=name
    label=label
    emptyText=emptyText
  }}
{{/if}}

{{#if tip}}
  {{uxs-data/tip
    tip
    display=display
    padded=padded
    inset=inset
    name=name
  }}
{{/if}}

{{yield
  (
    hash
    label=(
      component
      "uxs-data/label"
      display=display
      padded=padded
      inset=inset
      name=name
    )
    value=(
      component
      "uxs-data/value"
      display=display
      padded=padded
      inset=inset
      name=name
      emptyText=emptyText
    )
    group=(
      component
      "uxs-data/group"
      display=display
      padded=padded
      inset=inset
      name=name
    )
    tip=(
      component
      "uxs-data/tip"
      display=display
      padded=padded
      inset=inset
      name=name
    )
  )
}}
