{{!-- This dropdown menu is hidden on large devices --}}
{{#basic-dropdown class="uxs-header__mobile-menu" as |dropdown|}}
  {{#dropdown.trigger class="uxs-header__mobile-menu-trigger"}}
    {{uxs-icon "more_vert" style="white"}}
  {{/dropdown.trigger}}
  {{#dropdown.content class="uxs-header__mobile-menu-content"}}
    {{#uxs-menu as |menu|}}
      {{#if loading}}
        {{#each items as |item|}}
          {{menu.item item.params.firstObject disabled=true}}
        {{/each}}
      {{else}}
        {{#each items as |item|}}
          {{menu.link
            params=item.params
            disabled=item.disabled
            currentWhen=item.currentWhen
          }}
        {{/each}}
      {{/if}}
    {{/uxs-menu}}
  {{/dropdown.content}}
{{/basic-dropdown}}
