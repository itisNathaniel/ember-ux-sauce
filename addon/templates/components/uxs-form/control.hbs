{{yield
  (hash
    label=(
      component "uxs-form/label"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    input=(
      component "uxs-form/input"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    textarea=(
      component "uxs-form/textarea"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    checkbox=(
      component "uxs-form/checkbox"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    radio=(
      component "uxs-form/radio"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    dropdown=(
      component
      "uxs-form/dropdown"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    multi-dropdown=(
      component
      "uxs-form/multi-dropdown"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    date=(
      component
      "uxs-form/date"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    date-icon=(
      component
      "uxs-icon"
      "date_range"
      base="uxs-form__date-icon"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    tip=(
      component "uxs-form/tip"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
    error=(
      component "uxs-form/error"
      name=@name
      disabled=@disabled
      style=@style
      invalid=invalid
    )
  )
}}

{{#if hasError}}
  {{uxs-form/error
    error
    name=@name
    disabled=@disabled
  }}
{{/if}}
