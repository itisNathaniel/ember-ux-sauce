{{yield
  (hash
    label=(
      component "uxs-form/label"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
    input=(
      component "uxs-form/input"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
    textarea=(
      component "uxs-form/textarea"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
    checkbox=(
      component "uxs-form/checkbox"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
    radio=(
      component "uxs-form/radio"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
    dropdown=(
      component
      "uxs-form/dropdown"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
    multi-dropdown=(
      component
      "uxs-form/multi-dropdown"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
    tip=(
      component "uxs-form/tip"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
    error=(
      component "uxs-form/error"
      name=@name
      disabled=@disabled
      style=@style
      invalid=isInvalid
    )
  )
}}

{{#if hasError}}
  {{uxs-form/error
    error
    name=@name
    disabled=@disabled
  }}
{{/if}}
