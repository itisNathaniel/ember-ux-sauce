{{#if hasLabel}}
  {{uxs-form-label
    label
    name=name
    disabled=disabled
    style=style
    error=hasError
  }}
{{/if}}
{{#if hasTextInput}}
  {{uxs-form-input
    autocomplete=autocomplete
    autoresize=autoresize
    model=model
    name=name
    type=type
    value=value
    disabled=disabled
    placeholder=placeholder
    readonly=readonly
    style=style
    max=max
    min=min
    step=step
    error=hasError
  }}
{{/if}}
{{#if hasTextArea}}
  {{uxs-form-textarea
    autoresize=autoresize
    model=model
    name=name
    type=type
    value=value
    disabled=disabled
    style=style
    error=hasError
  }}
{{/if}}

{{yield
  (
    hash
    label=(
      component
      "uxs-form-label"
      name=name
      disabled=disabled
      style=style
      error=hasError
    )
    input=(
      component
      "uxs-form-input"
      autoresize=autoresize
      model=model
      name=name
      disabled=disabled
      value=value
      placeholder=placeholder
      readonly=readonly
      style=style
      max=max
      min=min
      step=step
      error=hasError
    )
    textarea=(
      component
      "uxs-form-textarea"
      autoresize=autoresize
      model=model
      name=name
      disabled=disabled
      value=value
      placeholder=placeholder
      readonly=readonly
      style=style
      rows=rows
      cols=cols
      error=hasError
    )
    dropdown=(
      component
      "uxs-form-dropdown"
      model=model
      name=name
      disabled=disabled
      value=value
      placeholder=placeholder
      readonly=readonly
      style=style
      error=hasError
    )
    date=(
      component
      "uxs-form-date"
      model=model
      name=name
      disabled=disabled
      placeholder=placeholder
      readonly=readonly
      style=style
      error=hasError
    )
    datetime=(
      component
      "uxs-form-datetime"
      model=model
      name=name
      disabled=disabled
      placeholder=placeholder
      readonly=readonly
      inlineInput=inline
      style=style
      error=hasError
    )
    time=(
      component
      "uxs-form-time"
      model=model
      name=name
      disabled=disabled
      placeholder=placeholder
      readonly=readonly
      inlineInput=inline
      style=style
      error=hasError
    )
    row=(
      component
      "uxs-form-control-row"
      model=model
      name=name
      disabled=disabled
      style=style
      error=hasError
    )
    tip=(
      component
      "uxs-form-tip"
      name=name
      disabled=disabled
      error=hasValidationError
      style=style
      error=hasError
    )
    warning=(
      component
      "uxs-form-warning"
      name=name
      disabled=disabled
      error=hasError
    )
    error=(
      component
      "uxs-form-error"
      name=name
      disabled=disabled
    )
  )
}}

{{#if hasTip}}
  {{uxs-form-tip
    tip
    name=name
    disabled=disabled
    error=hasValidationError
    style=style
  }}
{{/if}}
{{#if hasWarning}}
  {{uxs-form-warning
    warning
    name=name
    disabled=disabled
    error=hasError
  }}
{{/if}}
{{#if hasError}}
  {{uxs-form-error
    error
    name=name
    disabled=disabled
  }}
{{/if}}

{{#if modelErrors.length}}
  {{#each modelErrors as |modelError|}}
    {{uxs-form-error
      modelError.message
      name=modelError.attribute
      disabled=disabled
    }}
  {{/each}}
{{else}}
  {{#if hasValidationError}}
    {{uxs-form-error
      (v-get model name "message")
      name=name
      disabled=disabled
    }}
  {{/if}}
{{/if}}
