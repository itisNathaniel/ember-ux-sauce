{{uxs-icon
  toggleIcon
  class=(bem base "toggle" m)
  onClick=(action (mut isShowingNav) true)
}}

{{#if title}}
  {{#uxs-navbar-logo}}{{title}}{{/uxs-navbar-logo}}
{{/if}}

{{yield
  (
    hash
    logo=(
      component
      "uxs-navbar-logo"
    )
    menu=(
      component
      "uxs-menu"
      class="uxs-navbar__menu"
      align="right"
      bordered=false
      horizontal=true
      style=parentStyle
    )
    mobileNav=(
      component
      "uxs-navbar/mobile-nav"
      isShowingNav=isShowingNav
      style=parentStyle
    )
    desktopNav=(
      component
      "uxs-navbar/desktop-nav"
      style=parentStyle
    )
  )
}}
