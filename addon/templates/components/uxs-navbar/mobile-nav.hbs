{{#if isShowingNav}}
  {{#modal-dialog
    onClose=(action (mut isShowingNav) false)
    containerClass="uxs-navbar__drawer"
    overlayClass="uxs-navbar__drawer-overlay"
    wrapperClass="uxs-navbar__drawer-wrapper"
    tetherTarget="body"
    attachment="middle left"
    targetAttachment="middle left"
    targetModifier="visible"
    animatable=true
  }}
    {{yield (hash
      menu=(
        component
        "uxs-menu"
        class="uxs-navbar__menu uxs-navbar__menu--mobile"
        align="left"
        bordered=false
        horizontal=false
        style=style
        isShowingNav=isShowingNav
      )
    )}}
  {{/modal-dialog}}
{{/if}}
