{{#uxs-window}}

  {{#uxs-pane
    padding=true
    split=true
    order=2
    style="archive-form"
  }}

    {{#uxs-form
      onSubmit=(action "archive")
    as |form|
    }}

      {{uxs-heading
        heading
        color="error"
        style="white"
        weight="light"
      }}

      {{yield}}

      {{form.submit
        submitText
        style="error"
        name="submit"
        loading=loading
      }}

      {{#if cancelRoute}}
        {{form.link
          cancelText
          cancelRoute
          model
          type="button"
          disabled=loading
          style="grey"
          name="cancel"
        }}
      {{/if}}

    {{/uxs-form}}

  {{/uxs-pane}}

  {{#uxs-pane
    padding=true
    split=true
    style="archive-icon"
    order=1
  }}
    {{uxs-icon icon style="error" size="archive-icon"}}
  {{/uxs-pane}}

{{/uxs-window}}
