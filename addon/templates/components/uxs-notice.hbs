{{#if icon}}
  {{uxs-icon icon base=(concat b "__icon") m=m}}
{{/if}}

{{#if text}}
  {{uxs-text text base=(concat b "__text") m=m}}
{{/if}}

{{yield
  (
    hash
    icon=(component "uxs-icon" base=(concat b "__icon") m=m)
    text=(component "uxs-text" base=(concat b "__text") m=m)
    action=(component "uxs-button" base=(concat b "__action") m=m)
    actionLink=(component "uxs-button-link" base=(concat b "__action") m=m)
  )
}}
